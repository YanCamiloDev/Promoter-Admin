<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="promPontos"
            type="net.yan.kotlin.promoteradm.model.PromPontos" />

        <variable
            name="verificador"
            type="Boolean" />

        <variable
            name="view"
            type="Integer" />

        <variable
            name="click"
            type="net.yan.kotlin.promoteradm.principal.Clique" />
    </data>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:minHeight="148dp"
        app:cardElevation="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.motion.widget.MotionLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layoutDescription="@xml/scene">


                <LinearLayout
                    android:id="@+id/l1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="ExtraText">

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/ccc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/round_perfil"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_margin="@dimen/margin_16dp"
                                android:layout_marginTop="10dp"
                                app:fotoPerfil="@{promPontos}" />

                            <LinearLayout
                                android:id="@+id/linear2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    style="?attr/textAppearanceHeadline5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margim_8dp"
                                    android:layout_marginTop="16dp"
                                    android:fontFamily="@font/titillium_web_extralight"
                                    android:text="Yan"
                                    android:textSize="17sp"
                                    app:promoter="@{promPontos}" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="@dimen/margim_8dp"
                                    android:layout_marginBottom="@dimen/margim_8dp"
                                    android:text="cidade"
                                    android:textSize="14sp"
                                    app:cidade="@{promPontos}" />

                            </LinearLayout>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                </LinearLayout>

                <ImageView
                    android:id="@+id/fotoLocal"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@android:color/transparent"
                    android:clickable="true"
                    android:contentDescription="@string/cat_card_rich_media_image_view_description"
                    android:focusable="true"
                    android:scaleType="centerCrop"
                    app:backgroundTint="@color/material_on_surface_emphasis_medium"
                    app:backgroundTintMode="add"
                    app:fotoLocal="@{promPontos.foto}"
                    app:srcCompat="@drawable/ic_components_24px" />

                <LinearLayout
                    android:id="@+id/l2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/cat_card_double_spacing"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/fotoLocal">


                    <com.google.android.material.textview.MaterialTextView
                        style="?attr/textAppearanceHeadline5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/cat_card_single_spacing"
                        android:fontFamily="@font/titillium_web_extralight"
                        android:text="@{promPontos.id.toString()}"
                        android:textSize="15sp"
                        app:cliente="@{promPontos}" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/cat_card_single_spacing"
                        android:maxLines="2"
                        app:data="@{promPontos}" />

                    <View
                        android:id="@+id/vieww"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margim_8dp"
                        android:background="?attr/dividerHorizontal" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/heart2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:alpha=".0"
                    app:layout_constraintBottom_toBottomOf="@id/fotoLocal"
                    app:layout_constraintEnd_toEndOf="@id/fotoLocal"
                    app:layout_constraintStart_toStartOf="@id/fotoLocal"
                    app:layout_constraintTop_toTopOf="@id/fotoLocal"
                    app:srcCompat="@drawable/hearth" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/like"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margim_8dp"
                    android:onClick="@{() -> click.onClick(promPontos, view)}"
                    android:text="CURTIR"
                    android:textColor="#393ECA"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/l2"
                    tools:ignore="HardcodedText" />

            </androidx.constraintlayout.motion.widget.MotionLayout>
        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>